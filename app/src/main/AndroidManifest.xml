<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kotlinproject.ecommerceapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ECommerceApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activity.onboard.OnboardingActivity"
            android:exported="true" />
        <activity
            android:name=".fragment.profil.AccountDetails"
            android:exported="true" />
        <activity
            android:name=".fragment.profil.ChangeMyPassword"
            android:exported="true" />
        <activity
            android:name=".Activity.Auth.ForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.Auth.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.Auth.SiginActivity"
            android:exported="true" />
        <activity
            android:name=".fragment.onboarding.onBoardActivity"
            android:exported="true" />
        <activity
            android:name=".WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>